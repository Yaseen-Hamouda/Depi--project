@model Bookify.Core.Models.Room

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">

    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded shadow" />
    </div>

    <div class="col-md-6">
        <h2>Room @Model.RoomNumber</h2>

        <p class="text-muted">@Model.RoomType.Name</p>

        <h4 class="text-primary">@Model.RoomType.Price.ToString("C") / Night</h4>

        <p><strong>Capacity:</strong> @Model.RoomType.Capacity</p>

        <p>
            <strong>Status:</strong>
            <span class="badge bg-@(Model.Status == "Available" ? "success" : "danger")">
                @Model.Status
            </span>
        </p>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Booking" asp-action="Create" asp-route-roomId="@Model.Id"
               class="btn btn-primary">Book Now</a>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login"
               asp-route-returnUrl="@Url.Action("Details", "Rooms", new { id = Model.Id })"
               class="btn btn-primary">Book Now</a>
        }

    </div>

</div>
