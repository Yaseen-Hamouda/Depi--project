@model Bookify.Core.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<h2 class="mb-3">Room @Model.RoomNumber</h2>

<div class="row">

    <div class="col-md-6">
        <img src="https://via.placeholder.com/600x400" class="img-fluid rounded shadow" />
    </div>

    <div class="col-md-6">

        <h4>Room Type: @Model.RoomType?.Name</h4>
        <p><strong>Price per night:</strong> $@Model.RoomType?.Price</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Capacity:</strong> @Model.RoomType?.Capacity</p>

        <a asp-controller="Booking" asp-action="Create" asp-route-roomId="@Model.Id"
           class="btn btn-primary w-100">Book Now</a>


    </div>

</div>
