@using Microsoft.AspNetCore.Identity
@using Bookify.Core.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bookify | @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #1a252f;
            --accent-color: #3498db;
            --light-color: #ecf0f1;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* شريط التنقل */
        .navbar {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%) !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            padding: 12px 0;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.8rem;
            color: white !important;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

            .navbar-brand i {
                margin-right: 10px;
                background: linear-gradient(135deg, #3498db, #2ecc71);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                transition: all 0.5s ease;
                transform-origin: center;
            }

            .navbar-brand:hover i {
                transform: rotate(360deg) scale(1.2);
                background: linear-gradient(135deg, #1abc9c, #3498db);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                text-shadow: 0 0 10px rgba(52, 152, 219, 0.3);
            }

            .navbar-brand:hover {
                text-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
            }

            .navbar-brand::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: -100%;
                width: 100%;
                height: 2px;
                background: linear-gradient(90deg, transparent, #3498db, #2ecc71, transparent);
                transition: all 0.5s ease;
            }

            .navbar-brand:hover::after {
                left: 100%;
            }

        .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            font-weight: 500;
            padding: 8px 15px !important;
            border-radius: 20px;
            transition: all 0.3s ease;
            margin: 0 5px;
        }

            .nav-link:hover,
            .nav-link.active {
                color: white !important;
                background: rgba(255, 255, 255, 0.15);
                transform: translateY(-2px);
            }

        .navbar-toggler {
            border: none;
            color: white;
            font-size: 1.5rem;
        }

        /* زر التسجيل والدخول */
        .btn-outline-light {
            color: white;
            border-color: white;
        }

            .btn-outline-light:hover {
                background-color: white;
                color: var(--primary-color);
            }

        .btn-primary {
            background: var(--primary-color);
            border: none;
            color: #fff;
        }

            .btn-primary:hover {
                background: var(--secondary-color);
                transform: translateY(-2px);
                color: #fff;
            }

        /* المحتوى الرئيسي */
        .main-content {
            flex: 1 0 auto;
            padding: 20px 15px;
            width: 100%;
        }

        /* بطاقات محتوى الصفحات */
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            border: 1px solid rgba(44, 62, 80, 0.1);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border-radius: 15px 15px 0 0 !important;
            border: none;
        }

        /* الجداول */
        .table th {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
        }

        /* الأزرار */
        .btn-success {
            background: var(--primary-color);
            border: none;
        }

            .btn-success:hover {
                background: var(--secondary-color);
            }

        /* تصميم متجاوب */
        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }

            .nav-link {
                margin: 5px 0;
                text-align: center;
            }

            .btn {
                margin: 5px 0;
            }
        }

        /* FOOTER STYLES */
        .site-footer {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: #f1f1f1;
            padding: 1.5rem 0 0.8rem;
            width: 100%;
            flex-shrink: 0;
            margin-top: auto;
        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .footer-content {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .footer-column {
            flex: 1;
            min-width: 200px;
        }

            .footer-column h3 {
                font-size: 1.1rem;
                margin-bottom: 1rem;
                position: relative;
                padding-bottom: 0.4rem;
                font-weight: 600;
                color: #e0e0e0;
            }

                .footer-column h3::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 40px;
                    height: 2px;
                    background: linear-gradient(to right, #3498db, #2ecc71);
                    border-radius: 2px;
                }

        .footer-links {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .footer-links li {
                margin-bottom: 0.6rem;
            }

            .footer-links a {
                color: #d1d1d1;
                text-decoration: none;
                transition: all 0.3s ease;
                display: flex;
                align-items: center;
                gap: 0.4rem;
                font-size: 0.85rem;
            }

                .footer-links a:hover {
                    color: #ffffff;
                    transform: translateX(3px);
                }

                .footer-links a i {
                    font-size: 0.8rem;
                    color: #3498db;
                }

        .footer-social {
            display: flex;
            gap: 0.8rem;
            margin-top: 1rem;
        }

        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            color: #3498db;
            transition: all 0.3s ease;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .social-icon:hover {
                background: linear-gradient(135deg, #3498db 0%, #2ecc71 100%);
                color: white;
                transform: translateY(-2px);
            }

        .footer-newsletter p {
            margin-bottom: 1rem;
            line-height: 1.5;
            color: #d1d1d1;
            font-size: 0.85rem;
        }

        .newsletter-form {
            display: flex;
            gap: 0.4rem;
            margin-bottom: 1rem;
        }

        .newsletter-input {
            flex: 1;
            padding: 0.6rem 0.8rem;
            border: none;
            border-radius: 4px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 0.85rem;
        }

            .newsletter-input::placeholder {
                color: #ccc;
                font-size: 0.8rem;
            }

        .newsletter-btn {
            padding: 0.6rem 1rem;
            border: none;
            border-radius: 4px;
            background: var(--primary-color);
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 0.85rem;
        }

            .newsletter-btn:hover {
                background: var(--secondary-color);
                transform: translateY(-1px);
            }

        .footer-contact-item {
            display: flex;
            gap: 0.8rem;
            margin-bottom: 0.8rem;
            align-items: flex-start;
            flex-wrap: wrap;
        }

        .contact-icon {
            margin-top: 0.1rem;
            color: #3498db;
            font-size: 1rem;
            min-width: 16px;
        }

        .contact-info {
            flex: 1;
            color: #d1d1d1;
            font-size: 0.85rem;
        }

        .footer-bottom {
            text-align: center;
            padding-top: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: #aaa;
            font-size: 0.8rem;
        }

        /* RESPONSIVE STYLES FOR FOOTER */
        @@media (max-width: 768px) {
            .footer-content {
                flex-direction: column;
                gap: 1.5rem;
            }

            .newsletter-form {
                flex-direction: column;
            }

            .footer-column {
                min-width: 100%;
            }

            .site-footer {
                padding: 1.5rem 0 0.8rem;
            }
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hotel"></i> Bookify
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rooms" asp-action="Index">
                                <i class="fas fa-bed"></i> Rooms
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy
                            </a>
                        </li>

                        @* إذا المستخدم Admin يظهر زر Dashboard *@
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt"></i> Admin Dashboard
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Right Login / Register OR Logout -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    <i class="fas fa-user"></i> Hello, @UserManager.GetUserAsync(User).Result?.FullName
                                </span>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button class="btn btn-link nav-link text-danger">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <!-- FOOTER SECTION -->
    @if (ViewData["HideFooter"] == null || !(bool)ViewData["HideFooter"])
    {
        <footer class="site-footer">
            <div class="footer-container">
                <div class="footer-content">
                    <div class="footer-column">
                        <h3>About Bookify</h3>
                        <p>Bookify offers the best accommodation experience with comfortable rooms, excellent service, and affordable prices.</p>
                        <div class="footer-social">
                            <a href="javascript:void(0)" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                            <a href="javascript:void(0)" class="social-icon"><i class="fab fa-twitter"></i></a>
                            <a href="javascript:void(0)" class="social-icon"><i class="fab fa-instagram"></i></a>
                            <a href="javascript:void(0)" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>

                    <div class="footer-column">
                        <h3>Quick Links</h3>
                        <ul class="footer-links">
                            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right"></i> Home</a></li>
                            <li><a asp-controller="Rooms" asp-action="Index"><i class="fas fa-angle-right"></i> Rooms</a></li>
                            <li><a asp-controller="Bookings" asp-action="Index"><i class="fas fa-angle-right"></i> My Bookings</a></li>
                            <li><a asp-controller="Home" asp-action="Privacy"><i class="fas fa-angle-right"></i> Privacy</a></li>
                        </ul>
                    </div>

                    <div class="footer-column">
                        <h3>Our Services</h3>
                        <ul class="footer-links">
                            <li><a href="javascript:void(0)"><i class="fas fa-angle-right"></i> Room Booking</a></li>
                            <li><a href="javascript:void(0)"><i class="fas fa-angle-right"></i> 24/7 Support</a></li>
                            <li><a href="javascript:void(0)"><i class="fas fa-angle-right"></i> Secure Payment</a></li>
                            <li><a href="javascript:void(0)"><i class="fas fa-angle-right"></i> Free Cancellation</a></li>
                        </ul>
                    </div>

                    <div class="footer-column">
                        <h3>Contact Us</h3>
                        <div class="footer-contact-item">
                            <i class="fas fa-map-marker-alt contact-icon"></i>
                            <div class="contact-info">123 Hotel Street, City, Country</div>
                        </div>
                        <div class="footer-contact-item">
                            <i class="fas fa-phone contact-icon"></i>
                            <div class="contact-info">+1 234 567 8900</div>
                        </div>
                        <div class="footer-contact-item">
                            <i class="fas fa-envelope contact-icon"></i>
                            <div class="contact-info">info@bookify.com</div>
                        </div>
                    </div>
                </div>

                <div class="footer-bottom">
                    <p>&copy; @DateTime.Now.Year Bookify. All rights reserved.</p>
                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>