@model Bookify.Core.Models.Payment
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3">Add Payment</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Booking</label>
        <select asp-for="BookingId" asp-items="ViewBag.Bookings" class="form-select"></select>
        <span asp-validation-for="BookingId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Amount</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Stripe Transaction ID (Optional)</label>
        <input asp-for="StripeTransactionId" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Created At</label>
        <input asp-for="CreatedAt" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <button class="btn btn-success">Save</button>
    <a href="/Admin/Payments" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
