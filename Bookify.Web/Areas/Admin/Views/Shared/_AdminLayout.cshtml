<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f6fa;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            background: #1f1f1f;
            padding-top: 20px;
        }

            .sidebar a,
            .sidebar form button {
                color: #ccc;
                padding: 12px 20px;
                width: 100%;
                text-align: left;
                display: block;
                font-size: 16px;
                text-decoration: none;
                border: none;
                background: none;
                transition: 0.2s;
            }

                .sidebar a:hover,
                .sidebar form button:hover,
                .sidebar .active {
                    background: #0d6efd;
                    color: #fff;
                }

        .content {
            margin-left: 240px;
            padding: 25px;
        }
    </style>
</head>

<body>
    

    <div class="sidebar">
        <h4 class="text-white text-center mb-4">Admin Panel</h4>

        <a href="/Admin/Dashboard" class="@(Context.Request.Path.Value.Contains("/Dashboard") ? "active" : "")">
            <i class="fa fa-home"></i> Dashboard
        </a>

        <a href="/Admin/Rooms" class="@(Context.Request.Path.Value.Contains("/Rooms") ? "active" : "")">
            <i class="fa fa-bed"></i> Rooms
        </a>

        <a href="/Admin/RoomTypes" class="@(Context.Request.Path.Value.Contains("/RoomTypes") ? "active" : "")">
            <i class="fa fa-layer-group"></i> Room Types
        </a>

        <a href="/Admin/Bookings" class="@(Context.Request.Path.Value.Contains("/Bookings") ? "active" : "")">
            <i class="fa fa-calendar-check"></i> Bookings
        </a>

        <a href="/Admin/Payments" class="@(Context.Request.Path.Value.Contains("/Payments") ? "active" : "")">
            <i class="fa fa-credit-card"></i> Payments
        </a>

        <a href="/Admin/Users" class="@(Context.Request.Path.Value.Contains("/Users") ? "active" : "")">
            <i class="fa fa-users"></i> Users
        </a>

        <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
            <button type="submit" class="btn btn-link text-white w-100 text-start">
                <i class="fa fa-sign-out-alt"></i> Logout
            </button>
        </form>

    </div>

    <div class="content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>
