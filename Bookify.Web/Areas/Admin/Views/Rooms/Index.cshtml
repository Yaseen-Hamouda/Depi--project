@model IEnumerable<Bookify.Core.Models.Room>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3">Rooms</h2>

<a href="/Admin/Rooms/Create" class="btn btn-primary mb-3">+ Add Room</a>

<div class="row">
    @foreach (var room in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card room-card">
                <!-- مكان الصورة -->
                <div class="card-img-container" style="height: 200px; overflow: hidden;">
                    @if (!string.IsNullOrEmpty(room.ImageUrl))
                    {
                        <img src="@room.ImageUrl" class="card-img-top" alt="Room @room.RoomNumber" style="height: 100%; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 100%;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
            </div>

            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Room @room.RoomNumber</h5>
            </div>
            <div class="card-body">
                <p class="card-text"><strong>Type:</strong> @room.RoomType?.Name</p>
                <p class="card-text"><strong>Price:</strong> $@room.RoomType?.Price / night</p>
                <p class="card-text">
                    <strong>Status:</strong>
                    <span class="badge
                            @(room.Status == "Available" ? "bg-success" :
                                                        room.Status == "Occupied" ? "bg-danger" :
                                                        room.Status == "Maintenance" ? "bg-warning" : "bg-secondary")">
                        @room.Status
                    </span>
                </p>
            </div>
            <div class="card-footer">
                <a class="btn btn-warning btn-sm" href="/Admin/Rooms/Edit/@room.Id">Edit</a>
                <a class="btn btn-danger btn-sm" href="/Admin/Rooms/Delete/@room.Id">Delete</a>
            </div>
        </div>
    </div>
        }
</div>

<style>
    .room-card {
        transition: transform 0.3s;
        height: 100%;
    }

        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>