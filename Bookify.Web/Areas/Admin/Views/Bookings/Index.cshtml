@model IEnumerable<Bookify.Core.Models.Booking>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mt-3">
    <h2>Bookings</h2>
    <a href="/Admin/Bookings/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Booking
    </a>
</div>

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Bookings Management</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Guest</th>
                        <th>Room</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th style="width:140px;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-light rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                        <i class="fas fa-user text-muted"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold">@(b.User?.UserName ?? "N/A")</div>
                                        <small class="text-muted">@b.UserId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">Room @b.RoomId</span>
                                @if (b.Room?.RoomType != null)
                                {
                                    <small class="d-block text-muted">@b.Room.RoomType.Name</small>
                                }
                            </td>
                            <td>
                                <div class="fw-bold">@b.CheckInDate.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@b.CheckInDate.ToString("ddd")</small>
                            </td>
                            <td>
                                <div class="fw-bold">@b.CheckOutDate.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@b.CheckOutDate.ToString("ddd")</small>
                            </td>
                            <td>
                                <span class="badge bg-success fs-6">$@b.TotalPrice</span>
                            </td>
                            <td>
                                @{
                                    var statusClass = b.PaymentStatus switch
                                    {
                                        "Paid" => "bg-success",
                                        "Pending" => "bg-warning",
                                        "Failed" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@b.PaymentStatus</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-warning" href="/Admin/Bookings/Edit/@b.Id" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-info" href="/Admin/Bookings/Details/@b.Id" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-danger" href="/Admin/Bookings/Delete/@b.Id"
                                       title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this booking?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted">
        <div class="row align-items-center">
            <div class="col">
                <small>Showing @Model.Count() bookings</small>
            </div>
            <div class="col-auto">
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-primary">Previous</button>
                    <button class="btn btn-sm btn-outline-primary">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 1rem 0.75rem;
    }

    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
        border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        padding: 1rem 1.5rem;
    }

    .btn-group .btn {
        border-radius: 5px;
        margin: 0 1px;
        padding: 0.375rem 0.75rem;
    }

    .avatar-sm {
        font-size: 0.8rem;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.35em 0.65em;
    }

    .bg-success {
        background-color: #198754 !important;
    }

    .bg-warning {
        background-color: #ffc107 !important;
        color: #000;
    }

    .bg-danger {
        background-color: #dc3545 !important;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }
</style>

@section Scripts {
    <script>
        // Add smooth hover effects
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                row.style.transition = 'all 0.2s ease';
            });
        });
    </script>
}