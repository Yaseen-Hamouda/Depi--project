@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5">
            <!-- البطاقة الرئيسية -->
            <div class="card shadow-sm border-0">
                <!-- الترويسة -->
                <div class="card-header bg-white border-0 py-4">
                    <div class="text-center">
                        <i class="fas fa-user-circle fa-3x text-muted mb-3"></i>
                        <h4 class="fw-light mb-1">مرحباً بعودتك</h4>
                        <p class="text-muted small">سجل دخولك للمتابعة</p>
                    </div>
                </div>

                <!-- جسم البطاقة -->
                <div class="card-body p-4">
                    <form id="account" method="post">
                        <!-- رسائل الخطأ -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-light text-danger border border-danger-subtle mb-4"></div>

                        <!-- حقل البريد الإلكتروني -->
                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label text-muted mb-2">
                                <i class="fas fa-envelope me-2"></i>البريد الإلكتروني
                            </label>
                            <input asp-for="Input.Email"
                                   class="form-control form-control-lg border-0 bg-light"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="ادخل بريدك الإلكتروني" />
                            <span asp-validation-for="Input.Email" class="text-danger small mt-1"></span>
                        </div>

                        <!-- حقل كلمة المرور -->
                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label text-muted mb-2">
                                <i class="fas fa-lock me-2"></i>كلمة المرور
                            </label>
                            <div class="input-group">
                                <input asp-for="Input.Password"
                                       class="form-control form-control-lg border-0 bg-light"
                                       autocomplete="current-password"
                                       aria-required="true"
                                       placeholder="ادخل كلمة المرور"
                                       id="passwordInput" />
                                <button class="btn btn-outline-light border-0 bg-light" type="button" id="togglePassword">
                                    <i class="fas fa-eye text-muted"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small mt-1"></span>
                        </div>

                        <!-- تذكرني ونسيت كلمة المرور -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe" />
                                <label class="form-check-label text-muted small" for="rememberMe">
                                    تذكرني
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small text-muted">
                                نسيت كلمة المرور؟
                            </a>
                        </div>

                        <!-- زر تسجيل الدخول -->
                        <div class="mb-4">
                            <button id="login-submit" type="submit" class="btn btn-dark w-100 py-3 rounded-1">
                                تسجيل الدخول
                            </button>
                        </div>

                        <!-- تسجيل الدخول بالمنصات الاجتماعية -->
                        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                        {
                            <div class="mb-4">
                                <div class="position-relative text-center mb-3">
                                    <hr class="text-muted" />
                                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
                                        أو سجل باستخدام
                                    </span>
                                </div>

                                <div class="row g-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <div class="col-6">
                                            <button type="submit"
                                                    class="btn btn-outline-secondary w-100 rounded-1"
                                                    name="provider"
                                                    value="@provider.Name">
                                                if (provider.Name == "Google")
                                                {
                                                    <i class="fab fa-google me-2"></i>
                                                    جوجل
                                                                                        }
                                                else if (provider.Name == "Facebook")
                                                {
                                                    <i class="fab fa-facebook me-2"></i>
                                                    فيسبوك
                                                                                }
                                                else
                                                {
                                                    @provider.DisplayName
                                                }
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- رابط التسجيل -->
                        <div class="text-center pt-3 border-top">
                            <p class="text-muted mb-0">
                                ليس لديك حساب؟
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-dark">
                                    سجل الآن
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- روابط إضافية -->
            <div class="text-center mt-4">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none small text-muted">
                    <i class="fas fa-envelope me-1"></i>
                    إعادة إرسال بريد التفعيل
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // تبديل رؤية كلمة المرور
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('passwordInput');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    this.innerHTML = type === 'password'
                        ? '<i class="fas fa-eye text-muted"></i>'
                        : '<i class="fas fa-eye-slash text-muted"></i>';
                });
            }

            // إضافة تأثيرات بسيطة
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
            });
        });
    </script>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 8px;
            border: none;
        }

        .card-header {
            padding-top: 2.5rem;
            padding-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 4px;
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.1rem rgba(108, 117, 125, 0.1);
                border-color: #dee2e6;
            }

        .btn-dark {
            background-color: #2c3e50;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-dark:hover {
                background-color: #1a252f;
                transform: translateY(-1px);
            }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #dee2e6;
            transition: all 0.3s ease;
        }

            .btn-outline-secondary:hover {
                background-color: #f8f9fa;
                border-color: #adb5bd;
            }

        .bg-light {
            background-color: #f8f9fa !important;
        }

        .text-muted {
            color: #6c757d !important;
        }

        .form-check-input:checked {
            background-color: #2c3e50;
            border-color: #2c3e50;
        }

        .form-check-input:focus {
            box-shadow: 0 0 0 0.1rem rgba(44, 62, 80, 0.1);
        }

        a.text-dark:hover {
            color: #2c3e50 !important;
            text-decoration: underline;
        }

        .rounded-1 {
            border-radius: 4px !important;
        }

        .shadow-sm {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05) !important;
        }

        .focused .form-label {
            color: #2c3e50;
        }

        /* تأثيرات للأجهزة الصغيرة */
        media (max-width: 768px) {
            .container

        {
            padding: 1rem;
        }

        .card-body {
            padding: 1.5rem !important;
        }

        .card-header {
            padding: 2rem 1.5rem 1rem !important;
        }

        }

        /* تحسين مظهر أزرار العرض */
        #togglePassword {
            border-left: 1px solid #dee2e6;
            cursor: pointer;
        }

            #togglePassword:hover {
                background-color: #e9ecef;
            }
    </style>
}